@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<section class="card mb-3">
  <div class="card-header">
    <div class="cardListName">Add treat for this flavor: @Html.DisplayFor(model => model.Name)</div>
  </div>
  <div class="card-body">
    <div class="card-text">
      @using (Html.BeginForm())
      {
        @Html.HiddenFor(model => model.FlavorId)

        @Html.Label("Select Treat")
        @Html.DropDownList("TreatId", (IEnumerable<SelectListItem>)ViewBag.TreatId, new { @class = "form-control" })

        <input type="submit" value="Save" class="btn btn-primary mt-3"/>
      }
    </div>
  </div>
</section>